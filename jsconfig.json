// jsconfig.json文件
{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./src/*"
        ],
        "@assets": [
            "./src/assets/*"
        ]
      },
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "classic",
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}